[Unit]
Description=Excalidraw ({{ excalidraw_identifier }})
{% for service in excalidraw_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in excalidraw_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ sysd_docker_unit_home_path }}"
ExecStartPre=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} stop -t {{ sysd_docker_grace_stop }} {{ excalidraw_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} rm {{ excalidraw_identifier }} 2>/dev/null || true'

{#
  When using the pulled image, root access with write permission is required.
  See: https://github.com/excalidraw/excalidraw/blob/master/Dockerfile
#}
ExecStartPre={{ sysd_docker_host_command }} create \
      --rm \
      --name={{ excalidraw_identifier }} \
      --log-driver=none \
      {% if excalidraw_container_image_self_build %}
      --user={{ excalidraw_uid }}:{{ excalidraw_gid }} \
      {% endif %}
      --cap-drop=ALL \
      {% if excalidraw_container_image_self_build %}
      {% else %}
      --cap-add=CHOWN \
      --cap-add=SETGID \
      --cap-add=SETUID \
      {% endif %}
      {% if excalidraw_container_image_self_build %}
      --read-only \
      {% endif %}
      --network={{ excalidraw_container_network }} \
      {% if excalidraw_container_http_host_bind_port %}
      -p {{ excalidraw_container_http_host_bind_port }}:{{ excalidraw_container_http_port }} \
      {% endif %}
      --env-file={{ excalidraw_base_path }}/env \
      --label-file={{ excalidraw_base_path }}/labels \
      {% for volume in excalidraw_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in excalidraw_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ excalidraw_container_image_self_build_name if excalidraw_container_image_self_build else excalidraw_container_image }}

{% for network in excalidraw_container_additional_networks %}
ExecStartPre={{ sysd_docker_host_command }} network connect {{ network }} {{ excalidraw_identifier }}
{% endfor %}

ExecStart={{ sysd_docker_host_command }} start --attach {{ excalidraw_identifier }}

ExecStop=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} stop -t {{ sysd_docker_grace_stop }} {{ excalidraw_identifier }} 2>/dev/null || true'
ExecStop=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} rm {{ excalidraw_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ excalidraw_identifier }}

[Install]
WantedBy=multi-user.target
